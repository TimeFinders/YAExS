# build an executable named myprog from testExam.cpp
INCLUDES =-Iexams -Ilocations -Ipeople -Itime -Itest
CC = g++ -std=c++0x
CFLAGS = $(INCLUDES) -g -Wall -Wextra
SCIP_LFLAGS =  -L/usr/lib  -lscip -lreadline  -lgmp -lz  -llpispx  -lsoplex -lobjscip -lnlpi.cppad
PQXX_LFLAGS = -lpqxx

TESTOPT_OBJ = testOpt.cpp optimizer.o
TESTDB_OBJ = testDB.cpp scheduler.o optimizer.o dbreader.o

all: testExam.cpp
	$(CC) $(CFLAGS) $(SCIP_INCLUDE) -o myprog optimizer.cpp exams/exam.cpp testOpt.cpp 

clean:
	$(RM) myprog

